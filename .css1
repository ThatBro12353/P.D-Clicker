body {
    font-family: Arial, sans-serif;
    text-align: center;
    margin: 50px;
    background-color: #f0f0f0;
}

#clicker {
    width: 200px;
    height: auto;
    cursor: pointer;
    margin: 20px;
    transition: transform 0.1s;
}

#clicker:active {
    transform: scale(0.95);
}

button {
    font-size: 20px;
    padding: 10px 20px;
    margin: 10px;
}
